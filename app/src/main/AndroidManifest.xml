<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jme5297.flightplanner">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_flightplanner"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_flightplanner_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".WindToolActivity"
            android:label="@string/title_activity_wind_tool"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WindToolOutputActivity"
            android:label="Wind Correction Table"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MetarTafOutputActivity"
            android:label="@string/title_activity_metar_taf_output"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>